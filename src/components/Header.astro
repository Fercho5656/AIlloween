---
import { Ghost } from "lucide-react";
---

<header
  class="fixed top-0 left-0 right-0 z-50 backdrop-blur-sm shadow-sm mix-blend-difference text-white"
>
  <div class="container mx-auto px-4 py-8">
    <div class="flex items-center justify-between">
      <a href="/" class="flex items-center gap-x-2">
        <Ghost size={48} />
        <h1 class="text-4xl font-bold text-gradient">AIlloween</h1>
      </a>
      <nav class="flex items-center space-x-6 text-xl">
        <a
          href="/#hero"
          class="font-medium text-[color:--primary] hover:text-[color:--primary/80] transition-colors"
        >
          Upload
        </a>
        <a
          href="/#how-it-works"
          class="font-medium text-[color:--primary] hover:text-[color:--primary/80] transition-colors"
        >
          How it Works
        </a>
        <a
          href="/#examples"
          class="font-medium text-[color:--primary] hover:text-[color:--primary/80] transition-colors"
        >
          Examples
        </a>
      </nav>
    </div>
  </div>
</header>
